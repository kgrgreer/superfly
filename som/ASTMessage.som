ASTMessage = (
  | obj selector args |

  obj:      v = ( obj      := v )
  selector: v = ( selector := v )
  args:     v = ( args     := v )

  asString = (
    ^ self toC
  )

  toC = ( | s |
    s := 'MSG(' + obj + ', ' + selector.
    args do: [ :a |
      s := s + ', ' + a
    ].
    ^s
  )

----
  selector: s = ( | m |
    m := ASTMessage new.
    m selector: s.
    m args: #().
    m obj: 'UNKNOWN'.
    ^m
  )
)
