StringAction = Parser (
  | parser |

  parser:  v = ( parser := self prepare: v )

  parse: ps = ( | start end |
    (parser respondsTo: #skip) ifTrue: [
      ps := parser skip parse: ps
    ].
    start := ps pos.
    ps := parser parse: ps.
    ps isNil ifTrue: [ ^ nil ].
    end := ps pos - 1.
    ps := ps value: (ps substringFrom: start to: end).
    ^ ps
  )

  ----
  parser: p = ( | r |
    r := StringAction new.
    r parser:  p.
    ^r
  )
)
