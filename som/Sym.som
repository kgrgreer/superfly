Sym = Parser (
  | grammar symbol parser |

  grammar: v = ( grammar := v )
  symbol:  v = ( symbol  := v )

  parse: ps = (
    (parser isNil) ifTrue: [ parser := (grammar perform: symbol) ].

"    ('   ------------------------------ SYM: ' + symbol) println."
    ^ parser parse: ps
  )

  ----
  grammar: g symbol: s = ( | p |
    p := Sym new.
    p grammar: g.
    p symbol: s.
    ^p
  )
)
